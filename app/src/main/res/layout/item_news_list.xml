<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#FFFFFF"
        >
    <!--android:background="#26262B"-->
    <RelativeLayout
            android:id="@+id/rl_top_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                android:textColor="#26262B"
                />

        <TextView
                android:id="@+id/item_time"
                android:layout_below="@id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                />
    </RelativeLayout>

    <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#D1D1D1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            />

    <RelativeLayout
            android:id="@+id/rl_content_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <TextView
                android:id="@+id/item_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="#6A6A6D"
                android:textSize="16sp"
                />
        <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_article"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#D1D1D1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            />

    <RelativeLayout
            android:id="@+id/rl_more_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
        <TextView
                android:id="@+id/item_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="read more"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                />
    </RelativeLayout>

</LinearLayout>